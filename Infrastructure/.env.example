# Archevi - Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL Database
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Cohere API (Get from https://dashboard.cohere.com/)
COHERE_API_KEY=your-cohere-api-key-here

# Windmill Configuration
WINDMILL_URL=http://localhost
WINDMILL_WORKSPACE=family-brain
WINDMILL_TOKEN=your-windmill-token-here
WINDMILL_MCP_TOKEN=your-mcp-token-here

# JWT Configuration (for authentication)
JWT_SECRET=change-this-to-a-secure-random-string

# Default Tenant (for testing/development)
# DEFAULT_TENANT_ID=your-tenant-uuid-here

# Optional: Enable Zero Data Retention for Cohere
# COHERE_ZDR_ENABLED=true

# Brand Configuration (Email & Marketing)
# Used by email_service.py for transactional emails
BRAND_FROM_EMAIL=Archevi <hello@archevi.ca>
BRAND_REPLY_TO=support@archevi.ca
BRAND_LOGO_URL=https://archevi.ca/logo.png
APP_URL=https://app.archevi.ca
MARKETING_URL=https://archevi.ca
DOCS_URL=https://docs.archevi.ca

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
