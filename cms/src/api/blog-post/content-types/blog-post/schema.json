{
  "kind": "collectionType",
  "collectionName": "blog-posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string",
      "maxLength": 100
    },
    "published_date": {
      "type": "datetime"
    },
    "category": {
      "type": "enumeration",
      "default": "News",
      "enum": [
        "News",
        "Updates",
        "Features",
        "Community"
      ]
    },
    "is_published": {
      "type": "boolean",
      "default": false
    }
  }
}
